extends ./layouts/main.pug

block content

  .container
    .wrapper
      form.form-login(action='/resetpassword' method='POST')
        h3.indigo-text.text-darken-2 Please Enter Details...
        br
        br
        input.form-control(type='text', name='emailid', placeholder='Email Address', required='', autofocus='',id = "emailid", autocomplete='off')
        br
        label(style='font-size:15px;') Select Your Security question :
        br
        br
        select.dropdown-button.btn.indigo(name='question')
          option(value='bof') Birth-place of your father
          option(value='bom') Birth-place of your Mother
          option(value='fcc') Your Favourite Cartoon Character
          option(value='fmn') Your First Mobile-Number
          option(value='bf') Your Best Friend
        br
        br
        input.form-control(type='text', name='answer', placeholder='Your Answer', required='', autofocus='',id = "answer", autocomplete='off')
        br
        button.btn.btn-lg.btn-info.btn-block.indigo(type='submit', name='submit') Submit
        br
        br
        br
        label(style='font-size:15px;') Don't Have an Account?
        a(href='register', style = "margin : 5px;") Create Account
        br
        br
        label(style='font-size:15px;') Note: If you get same page after submit details once, Your entered details is/are incorrect, Please re-enter correct details and check again!!!

        script.
          var question = document.getElementById("question");
          var returnvalue = question.options[question.selectedIndex].value;
